# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./robots.db

# Privy API (for robot wallet creation)
# Get these from https://dashboard.privy.io
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# x402 Payments
# Set to true to enable payment gateway, false for free access (testing)
PAYMENT_ENABLED=false
# Payment address: can be ENS name (e.g., "vitalik.eth") or hex address
PAYMENT_ADDRESS=0x...your_wallet_address
# Options: "base-sepolia" (testnet) or "base" (mainnet)
X402_NETWORK=base-sepolia

# Session
SESSION_DURATION_MINUTES=10
SESSION_PRICE=$0.10
