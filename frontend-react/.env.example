# Default Tumbller Robot Configuration
# These values will be loaded automatically on first startup

VITE_DEFAULT_ROBOT_NAME=Tumbller-1
VITE_DEFAULT_MOTOR_IP=192.168.1.100
VITE_DEFAULT_CAMERA_IP=192.168.1.101

# Backend API URL
# The FastAPI backend URL for robot control and session management
VITE_API_URL=http://localhost:8000

# x402 Payment Network
# Options: "base-sepolia" (testnet) or "base" (mainnet)
VITE_X402_NETWORK=base-sepolia

# Authentication Configuration
# Set VITE_ENABLE_AUTH=true to require login
VITE_ENABLE_AUTH=true

# Choose auth method: "logto" (email/social) or "privy" (wallet-only)
VITE_AUTH_METHOD=privy

# Privy Configuration (for wallet-based login)
# Get credentials from https://dashboard.privy.io
VITE_PRIVY_APP_ID=

# Logto Configuration (for email/social login)
VITE_LOGTO_ENDPOINT=
VITE_LOGTO_APP_ID=
